{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://prism.proofspace.id/prism-credential-schema",
  "$comment": "TODO: get domain name in cardano ecosystem",
  "title": "PRISM Credential Schema Definition",
  "description": "generated automatically from <a href='https://github.com/zakaio/atala-prism-schema/blob/main/json_schema/meta/prism-credentials.json'> prism-credentials.json  </a>",
  "type": "object",
  "properties": {
     "name": { 
	     "type": "string",
	     "maxLength": 255,
	     "minLength": 1,
	     "title": "schema name",
	     "description": "schema name (arbitraty string)"
     },
     "version": { "type":  "string" },
     "description": { "type": "string" },
     "id": { 
        "type": "string",
	"$comment": "TODO: shoult be URI",
	"description": "Unique schema id. Publishing tool should check uniquiness of id during submtting schema to blockchain"
     },
     "author": { 
	 "$ref":  "#/$defs/did" 
     },
     "trustRegistry": {
	   "$ref": "#/$defs/trustRegistry"
     },
     "properties": {
	 "type" : "object",
	 "description": "keys are names of fields, values are field descriptions.",
	 "additionalProperties" : { "$ref": "#/$defs/field" }
     },
     "uniquiness": { 
	     "type": "array", "items": { "type":"string" },
	     "description": "list of fields, which should be unique in domain (i.e. two credentials with the same set of such fiellds should be the same, if not - this is probable error or fraud attempt)"
     },
     "comment": { "type": "string" }
  },
  "required": [ "name", "version", "id", "author", "trustRegistry", "properties" ],
  "$defs": {
     "trustRegistry": {
	 "title": "definition of trust registry",
         "type": "object",
	 "oneOf": [
	    { 
	      "title": "One issuer",
	      "description": "Trust registry consists from one issuer, which have right to issue credentials with such schema",
	      "type": "object",
	      "properties": {
		  "type": { "const" : "issuer"} ,
		  "issuer": { "$ref": "#/$defs/did" }
	       }
	    },
	    { 
	      "title": "Token Registry",
	      "description": "Trust registry described by token ownity",
	      "type": "object",
	      "properties": {
		  "type": { "const": "token-registry"} ,
		  "token": { "type": "string" }
	      }
	    },
	    { 
	      "title": "Permissionless",
	      "type": "object",
	      "description": "Anybody can issue the schema",
	      "properties": {
		  "type": { "const" : "permissionless"} 
	       }
	    }
	 ]
     },
     "field": {
        "title": "credential field",
	"allOf": [
	  { 
	    "title" : "Common",
	    "description": "Common properties which each credential field can have",
	    "type": "object",
            "properties": {
	      "title": { "type": "string",
		         "description": "title of the field as user see it in the application. Can contains whitespaces.",
			 "default": "the same as a property key"
	               },
	      "fieldName": {"type": "string",
		         "description": "name of field, as it can be specified in the programming language source code. Used for code generation.",
			 "default": "property key, with deleted spaces and all words conctenated in camelCase"
	               },
	      "description": { "type": "string" },
	      "contextUri": { "type": "string",
		      "description": "context-uri of property field, used for json-ld generation",
		      "default": "default json-ld view described in TBD"
	      },
	      "optional": { "type": "boolean" },
	      "disclosable": { "type": "boolean",
	          "description": "used for selective-disclosure, value of field is used in seletive disclosure if verification protocol supports this" },
	      "comparable": { "type": "boolean" },
	      "indexable": { "type": "boolean" },
	      "unique": { "type": "boolean" },
	      "comment": { "type": "string" }
	     }
	  },
	  {
	   "title" : "Type specific",
	   "type": "object",
	   "oneOf" : [
             {
              "title": "string",
	      "description"  : "string value",
              "properties" : {
		 "type" : { "const": "string" },
		 "pattern" : { "type": "string", 
			       "$comment": "TODO: define format for regexpr"
		             },
		 "minLength": {  "type" : "integer" },   	    
		 "maxLength": {  "type" : "integer" },
		 "multiline": {  "type" : "boolean",
			         "description": "should fields be displayed as multiline"
		              },
	         "keyboardHint": {  "type" : "string",
			       "$comment": "TODO: define enum"
		 }
	       }
	     },
	     {
	      "title": "integer",
	      "description"  : "integer value",
              "type" : "object",
              "properties" : {
		 "type" : { "const": "integer" },
		 "minimum": { "type": "integer"},
		 "maximum": { "type": "integer"}
	      }
	     },
	     {
              "type" : "object",
	      "title": "number",
	      "description"  : "number, represented as float",
              "properties" : {
		 "type" : { "const": "number" }
	      }
	     },
	     {
	      "title": "decimal",
	      "description"  : "decimal number",
              "type" : "object",
              "properties" : {
		 "type" : { "const": "decimal" }
	      }
	     },
	     {
	      "title": "boolean",
              "type" : "object",
              "properties" : {
		 "type" : { "const": "boolean" }
	      }
	     },
	     {
	       "title": "timestamp",
               "type" : "object",
               "properties" : {
		  "type" : { "const": "timestamp" },
		  "timeOf" : { "$ref": "#/$defs/timestampEvent" }
	       },
	       "description" : "timestamp respresented as string in RFC3339 format"
	     },
	     {
	       "title": "date",
               "type" : "object",
               "properties" : {
		  "type" : { "const": "date" }
	       },
	       "description" : "date represented as string in ISO8601"
	     },
	     {
	       "title": "enum",
               "type" : "object",
               "properties" : {
		  "type" : { "const": "enum" },
		  "values" : {  "type": "array", "items": { "type": "string" } }
	       }
	     },
	     {
	       "title": "array",
               "type" : "object",
               "properties" : {
		  "type" : { "const": "array" },
		  "items" : { "$ref": "#/$defs/field"  }
	       }
	     }
           ]	   
	 } 
       ]
     },
     "did": {
	"type": "string",
	"title": "did",
	"description": "decentralizes identifier (did) as specified in 'https://www.w3.org/TR/did-core' "
     },
     "timestampEvent": {
	"title": "Event associated with timestamp",     
	"desription": "if present, denote a special value of timestamp field",
	"type": "string",
	"enum": [ "issuing", "expiration" ]
     }
  }  
}
